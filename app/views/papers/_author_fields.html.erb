<div class="author">
  <div class="field">
    <%= f.label :last_name, 'Last Name' %>
    <%= f.text_field :last_name, :class => 'input-large', :title => 'Please provide last name of the author', 
                     :'ref' => 'tooltip', :'data-placement' => 'bottom' %>
  </div>
  <div class="field">
    <%= f.label :first_name, 'First Name' %>
    <%= f.text_field :first_name, :class => 'input-large', :title => 'Please provide first name of the author', :'ref' => 'tooltip', :'data-placement' => 'bottom' %>
  </div>
  <div class="field">
    <%= f.label :middle_initial, 'M.I.' %>
    <%= f.text_field :middle_initial, :class => 'input-small', :title => 'Please provide middle initial of the author', :'ref' => 'tooltip', :'data-placement' => 'bottom' %>
  </div>
</div>
