<div class="experiment">
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :exp_desc %><br />
    <%= f.text_area :exp_desc %>
  </div>
  <div class="field">
    <%= f.label :part_num %><br />
    <%= f.number_field :part_num %>
  </div>
  <div class="field">
    <%= f.label :part_age_min %><br />
    <%= f.number_field :part_age_min %>
  </div>
  <div class="field">
    <%= f.label :part_age_max %><br />
    <%= f.number_field :part_age_max %>
  </div>
  <div class="field">
    <%= f.label :part_background %><br />
    <%= f.text_area :part_background %>
  </div>
  <div class="field">
    <%= f.label :system_desc %><br />
    <%= f.text_area :system_desc %>
  </div>
  <div class="field">
    <%= f.label :other_vars %><br />
    <%= f.text_area :other_vars %>
  </div>
  <div class="field">
    <%= f.label :constants %><br />
    <%= f.text_area :constants %>
  </div>
  <div class="field">
    <%= f.label :comp_desc %><br />
    <%= f.text_area :comp_desc %>
  </div>

  <%= link_to_remove_fields "Remove Experiment", f %>
  
  <%= f.fields_for :tasks do |builder| %>
    <%= render 'task_fields', :f => builder %>
  <% end %>
  <p><%= link_to_add_fields "Add Task", f, :tasks %></p>
</div>
